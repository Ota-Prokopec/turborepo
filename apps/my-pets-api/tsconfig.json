{
	"extends": "../../packages/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node"
	},

	"include": [
		"src/**/*.d.ts",
		"src/**/*.ts",
		"src/**/*.js",
		"../../global.d.ts",
		"../../tsReset.d.ts"
	],
	"exclude": ["node_modules", "dist"]
}
