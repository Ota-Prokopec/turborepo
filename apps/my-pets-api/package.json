{
	"name": "my-pets-api",
	"version": "1.0.0",
	"license": "MIT",
	"main": "src/index.ts",
	"scripts": {
		"dev": "console-ninja nodemon -w *.ts -e ts -x ts-node --files -H -T src/index.ts",
		"prebuild": "pnpm barrelsby && pnpm generate-graphql-schema",
		"build": "tsc -build",
		"generate-graphql-schema": "ts-node  ./src/schema.ts",
		"generate-schema-barrels": "barrelsby --delete --exportDefault --singleQuotes --directory ./src/schema",
		"generate-resolvers-barrels": "barrelsby --delete --exportDefault --singleQuotes --directory ./src/resolvers",
		"generate-types-barrels": "barrelsby --delete --exportDefault --singleQuotes --directory ./src/graphqlTypes/",
		"generate-database-barrels": "barrelsby --delete  --singleQuotes --directory ./src/lib/database/",
		"barrelsby": "pnpm generate-types-barrels && pnpm generate-schema-barrels && pnpm generate-resolvers-barrels",
		"start": "node --experimental-modules ./dist/esm/index.js",
		"preview": ""
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^26.0.1",
		"@rollup/plugin-graphql": "^2.0.4",
		"@rollup/plugin-typescript": "^11.1.5",
		"@types/express": "^4.17.17",
		"@types/gm": "^1.25.4",
		"@types/http-server": "^0.12.1",
		"barrelsby": "^2.8.0",
		"nodemon": "3.1.4",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"type-fest": "^4.9.0",
		"typescript": "5.5.2",
		"vitest": "^1.6.0"
	},
	"dependencies": {
		"@cloudinary/url-gen": "^1.15.0",
		"@repo/appwrite-permissions": "workspace:*",
		"@repo/appwrite-ssr-graphql": "workspace:*",
		"@repo/cloudinary-server": "workspace:*",
		"@repo/my-pets-tstypes": "workspace:*",
		"@repo/utils": "workspace:*",
		"@types/cookie-parser": "^1.4.3",
		"apollo-server-express": "^3.12.1",
		"appwrite": "^15.0.0",
		"cloudinary": "^2.2.0",
		"compressorjs": "^1.2.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"firebase-admin": "12.2.0",
		"gm": "^1.25.0",
		"graphql": "^16.8.0",
		"graphql-scalars": "^1.22.2",
		"lodash": "^4.17.21",
		"nexus": "1.3.0",
		"node-appwrite": "^13.0.0",
		"pexels": "^1.4.0",
		"sharp": "^0.33.1",
		"tsconfig": "workspace:*",
		"vite-plugin-node": "^3.0.2",
		"web-push": "^3.6.7",
		"wikipedia": "^2.1.1"
	}
}
