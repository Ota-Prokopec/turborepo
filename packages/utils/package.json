{
	"name": "@repo/utils",
	"version": "1.0.1",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./src/index.ts"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "npm run build:types && npm run build:libs",
		"build:libs": "rollup -c",
		"build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
		"prebuild": "pnpm barrelsby",
		"barrelsby": "barrelsby --delete  --singleQuotes --directory ./src/",
		"check-missing-dependencies": "npx dependency-check ./package.json src/**/* --missing"
	},
	"devDependencies": {
		"@types/node": "^20.14.9",
		"barrelsby": "^2.8.0",
		"dependency-check": "^4.1.0",
		"rollup": "^4.6.0",
		"ts-node": "^10.9.1",
		"typescript": "5.5.2"
	},
	"dependencies": {
		"@cloudinary/url-gen": "^1.15.0",
		"@maptiler/client": "^1.5.0",
		"@repo/ts-types": "*",
		"appwrite": "^15.0.0",
		"browser-image-compression": "^2.0.2",
		"buffer": "^6.0.3",
		"compressorjs": "^1.2.1",
		"date-fns": "^3.6.0",
		"geolocation-utils": "^1.2.5",
		"lodash": "^4.17.21",
		"node-appwrite": "^13.0.0",
		"zod": "^3.21.4"
	}
}
