{
	"name": "@repo/appwrite-client",
	"version": "1.0.1",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./src/index.ts"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "npm run build:types && npm run build:libs",
		"build:libs": "rollup -c",
		"build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
		"check-missing-dependencies": "npx dependency-check package.json src/**/* --missing"
	},
	"devDependencies": {
		"@types/js-cookie": "^3.0.3",
		"@types/node": "^20.14.9",
		"dependency-check": "^4.1.0",
		"rollup": "^4.6.0",
		"ts-node": "^10.9.1",
		"typescript": "5.5.2"
	},
	"dependencies": {
		"@repo/appwrite-permissions": "workspace:*",
		"@repo/appwrite-types": "workspace:*",
		"@repo/utils": "workspace:*",
		"@types/tough-cookie": "^4.0.2",
		"appwrite": "^15.0.0",
		"axios-cookiejar-support": "^5.0.2",
		"js-cookie": "^3.0.5",
		"lodash": "^4.17.21",
		"tough-cookie": "^4.1.3",
		"zod": "^3.21.4"
	}
}
