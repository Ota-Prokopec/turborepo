{
	"name": "@repo/appwrite-ssr-graphql",
	"version": "0.1.3",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "pnpm run build:types && pnpm run build:libs",
		"build:libs": "rollup -c",
		"build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
		"check-missing-dependencies": "npx dependency-check package.json src/**/* --missing"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@rollup/plugin-typescript": "^11.1.6",
		"@types/lodash": "^4.14.202",
		"@types/node": "^20.14.9",
		"@types/set-cookie-parser": "^2.4.3",
		"dependency-check": "^4.1.0",
		"tslib": "^2.6.2",
		"typescript": "5.5.2"
	},
	"dependencies": {
		"@repo/appwrite-permissions": "workspace:*",
		"@repo/appwrite-types": "workspace:*",
		"appwrite": "^15.0.0",
		"lodash": "^4.17.21",
		"node-appwrite": "^13.0.0",
		"rollup": "^4.19.0",
		"set-cookie-parser": "^2.6.0",
		"type-fest": "^4.9.0",
		"zod": "^3.22.4"
	}
}
