{
	"name": "@repo/appwrite-permissions",
	"version": "1.0.1",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "npm run build:types && npm run build:libs",
		"build:libs": "rollup -c",
		"build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
		"prebuild": "pnpm barrelsby && pnpm check-missing-dependencies",
		"barrelsby": "barrelsby --delete --singleQuotes --directory ./src",
		"check-missing-dependencies": "npx dependency-check package.json src/**/* --missing"
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "^11.1.6",
		"@types/node": "^20.14.9",
		"barrelsby": "^2.8.1",
		"dependency-check": "^4.1.0",
		"rollup": "^4.6.0",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.2",
		"typescript": "5.5.2"
	},
	"dependencies": {
		"appwrite": "^15.0.0"
	}
}
